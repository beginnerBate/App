@import './variable'
@import './modify'
#app
  background-color $color-background
  display block
  position absolute
  z-index 1
  width 100%
  height 100%
  overflow hidden
.header
  background $color-theme
  min-height 50px
  color $color-font-theme
  padding: 0 32px
.header h1
  font-size $font-size-large-x
  letter-spacing 4px
  line-height 50px
  text-shadow 1px 1px 5px #6196b7
.login
  position fixed 
  top 0
  right 0
  bottom 0
  left 0
  // background rgba(0,0,0,0.5)
  text-align center 
  white-space nowrap
  z-index 99
.login:after
  content ''
  display inline-block
  height 100%
  vertical-align middle
.login-wrapper
  display inline-block
  vertical-align middle
  background-color $color-background
  text-align left
  white-space normal
  border-radius 3px
  background-color #ffffff
  padding 50px 77px 42px 57px
  box-shadow 0 0 18px 0 rgba(57, 141, 238, 0.12)
  position relative
.login-content
  font-size $font-size-medium
.login-form-row
  margin-bottom 30px
.login-form-row input 
  padding 5px 10px
  line-height 30px
  outline none
  font-size $font-size-medium
  box-sizing border-box
  border 1px solid #d6d6d6
  border-radius 3px
  // height: 54px
  width: 296px
.login-errors
  position absolute
  top 0
  left 0
  width 100%
.login-info-errors
  display inline-block
  width 100%
  height 32px
  line-height 32px
  padding: 0 57px
  color: #721c24;
  background-color: #f8d7da;
  border-color: #f5c6cb;
.btn
  display inline-block
  width 130px
  height 46px
  line-height 46px
  border 1px solid $color-theme
  box-sizing: border-box
  border-radius 3px
  padding 0
  font-size $font-size-medium-x
  cursor pointer
  outline none
  letter-spacing 2px
.input
  padding 5px 10px
  line-height 30px
  outline none
  font-size $font-size-medium
  box-sizing border-box
  border 1px solid #d6d6d6
  border-radius 3px
  height:46px
  // width: 296px
.btn-submit
  background-color $color-theme
  color $color-font-theme
  display block
  margin 0 auto
.loading-container
  position: absolute
  width: 100%
  top: 50%
  left 0
  transform: translateY(-50%)
.home
  width 100%
  height 100%
  display flex
.home-right
  flex 0 0 240px
  background #f5f5f5
  border-right: 1px solid #e0e1e5
  position relative
  height 100%
.right-menu
  font-size $font-size-medium-x
  padding-top 1px
.r-m-list-item
  width: 100%
  height 40px
  line-height: 40px
  border-bottom: 1px solid rgba(0, 0, 0, 0.06)
  color: #959fb1
  cursor pointer
.r-m-list-item i 
  padding-left 50px
  padding-right: 10px
  font-size: $font-size-medium-x
.r-m-list-item.router-link-exact-active
  background-color: $color-theme
  color #fff
.r-m-list-child
  color: #686868
  font-size 14px
  // display: none
.r-m-list-child-item
  padding-left: 18px
.r-m-list-child-item i
  font-size: 14px
.r-m-list-child-item.router-link-exact-active
  background-color: $color-theme
  color #fff
// .r-m-list-item:hover
//   background: #dee7e7
.home-left
  flex 1
.temp,.adress,.modify
  padding: 20px
  box-sizing: border-box
  overflow hidden  
.temp-search,.temp-table,.adress-new,.modify-title
  margin-bottom 20px
  padding: 20px
  background-color: #ffffff
  box-shadow 0 0 18px 0 rgba(57, 141, 238, 0.12)
.temp-search h1,.adress-new h1,.modify-title>h1
  letter-spacing: 3px
  font-size: $font-size-medium-x
  color #393939
  padding-bottom: 15px
  margin-bottom: 15px
  border-bottom: 1px solid #d4d4d4
.temp-search-wrapper,.flexbox
  display: flex
.temp-search-row,.flexbox>div
  margin 0 15px
.temp-search-row label,.flexbox>div>label
  padding-right 15px
.temp-search-row input 
  // width 80px
.btn-search
  background: $color-theme
  color #fff
  text-align: center
  letter-spacing: 4px
  i
    padding-right 12px
.btn-search:hover
  background-color: #2575da
.temp-table-header h1
  border-bottom: 1px solid #d4d4d4
  padding-bottom: 15px
  margin-bottom: 15px
.table
  width: 100%
  thead
    letter-spacing: 3px
    height 46px
    line-height: 46px
    border-top 1px solid #d4d4d4
    border-bottom 1px solid #d4d4d4
    border-right 1px solid #d4d4d4
    tr
      th
        border-left: 1px solid #d4d4d4
  tbody
    border-right 1px solid #d4d4d4
    tr
      height 40px
      line-height: 40px
      border-bottom 1px solid #d4d4d4  
      th
        border-left: 1px solid #d4d4d4
    tr:nth-of-type(2n)
      background-color: #fafafa